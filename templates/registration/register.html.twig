{% extends 'layout.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="offset-md-4 col-md-4 offset-sm-3 col-sm-6 d-flex flex-column justify-content-center align-items-center" style="height: 100vh;">
            <div class="form-container">
                <h3 class="title">Create Account</h3>
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                {% endfor %}
                <form class="form-horizontal" action="{{ path('app_register') }}" method="post" autocomplete="off">
                    {{ form_start(registrationForm) }}
                    <div class="form-group">
                        {{ form_row(registrationForm.name, {'attr': {'class': 'form-control', 'placeholder': 'Name'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                    </div>
                    <button type="submit" class="btn signup">Sign up</button>
                    <a href="{{ path('app_login') }}" class="btn signup">Sign in</a>
                    {{ form_end(registrationForm) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
