{% extends 'layout.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div
            class="offset-md-4 col-md-4 offset-sm-3 col-sm-6 d-flex flex-column justify-content-center align-items-center"
            style="height: 100vh;">
            <div class="form-container">
                <h3 class="title">Log in</h3>

                <form class="form-horizontal" method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'login') }}</div>
                    {% endif %}
                    <div class="form-group">
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                               class="form-control" autocomplete="email" placeholder="Email" required autofocus>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" id="inputPassword" class="form-control"
                               autocomplete="current-password" placeholder="Password" required>
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div style="display: flex; align-items: center;">
                            <input type="checkbox" id="rememberMe" class="checkbox" name="_remember_me">
                            <label for="rememberMe" class="check-label" style="font-size: 16px; margin-left: 5px;">Remember
                                me</label>
                        </div>
                    </div>
                    <button type="submit" class="btn signup">Sign in</button>
                    <a href="{{ path('app_register') }}" class="btn signup">Sign up</a>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
